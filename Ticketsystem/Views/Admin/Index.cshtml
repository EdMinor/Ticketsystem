@model Ticketsystem.ViewModels.AdminTicketPanelViewModel
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold mb-6">@ViewData["Title"]</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <!-- Ticket Status Ãœbersicht -->
        <div class="bg-white dark:bg-gray-800 shadow-md rounded-xl p-5">
            <div class="flex items-center gap-2 mb-4 text-primary">
                @* Lucide Icon *@
                <i data-lucide="clipboard-list" class="w-5 h-5"></i>
                <h3 class="text-lg font-semibold">Ticket-Status</h3>
            </div>
            <ul class="space-y-1 text-sm">
                <li><a asp-controller="Ticket" asp-action="Index" asp-route-status="Offen" class="hover:underline">ðŸŸ¢ Offen: @Model.OpenTicketsCount</a></li>
                <li><a asp-controller="Ticket" asp-action="Index" asp-route-status="In Bearbeitung" class="hover:underline">ðŸŸ¡ In Bearbeitung: @Model.InProgressTicketsCount</a></li>
                <li><a asp-controller="Ticket" asp-action="Index" asp-route-status="Geschlossen" class="hover:underline">âšª Geschlossen: @Model.ClosedTicketsCount</a></li>
            </ul>
            <a asp-controller="Ticket" asp-action="Index" class="btn mt-4 w-full">Alle Tickets anzeigen</a>
        </div>

        <!-- Developer -->
        <div class="bg-white dark:bg-gray-800 shadow-md rounded-xl p-5">
            <div class="flex items-center gap-2 mb-4 text-purple-600">
                <i data-lucide="code" class="w-5 h-5"></i>
                <h3 class="text-lg font-semibold">Developer</h3>
            </div>
            <ul class="text-sm space-y-1">
                @if (Model.DeveloperUsers.Any())
                {
                    @foreach (var dev in Model.DeveloperUsers)
                    {
                                <li>@dev</li>
                    }
                }
                else
                {
                        <li><em>Keine Developer gefunden</em></li>
                }
            </ul>
        </div>

        <!-- Benutzer -->
        <div class="bg-white dark:bg-gray-800 shadow-md rounded-xl p-5">
            <div class="flex items-center gap-2 mb-4 text-blue-600">
                <i data-lucide="users" class="w-5 h-5"></i>
                <h3 class="text-lg font-semibold">Benutzer (@Model.UserNames.Count)</h3>
            </div>
            <ul class="text-sm space-y-1">
                @foreach (var userName in Model.UserNames.Take(5))
                {
                        <li>@userName</li>
                }
            </ul>
            <a asp-controller="UserManagement" asp-action="Index" class="btn mt-4 w-full">Benutzer verwalten</a>
        </div>

        <!-- Kategorien -->
        <div class="bg-white dark:bg-gray-800 shadow-md rounded-xl p-5">
            <div class="flex items-center gap-2 mb-4 text-green-600">
                <i data-lucide="folder-kanban" class="w-5 h-5"></i>
                <h3 class="text-lg font-semibold">Kategorien</h3>
            </div>
            <p class="text-sm">Anzahl: <strong>@ViewBag.CategoryCount</strong></p>
            <a asp-controller="Category" asp-action="Index" class="btn mt-4 w-full">Verwalten</a>
        </div>

        <!-- ÃœberfÃ¤llige Tickets -->
        <div class="bg-red-600 text-white shadow-md rounded-xl p-5 col-span-1">
            <div class="flex items-center gap-2 mb-4">
                <i data-lucide="alarm-clock" class="w-5 h-5"></i>
                <h3 class="text-lg font-semibold">ÃœberfÃ¤llige Tickets</h3>
            </div>
            <h3 class="text-2xl font-bold">@Model.OverdueTicketsCount</h3>
            <p class="text-sm mb-3">Offen seit Ã¼ber 3 Tagen</p>
            <a asp-controller="Admin" asp-action="Tickets" asp-route-overdue="true" class="btn btn-light w-full bg-white text-red-600 hover:bg-red-100">Anzeigen</a>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            lucide.createIcons();
        </script>
}
