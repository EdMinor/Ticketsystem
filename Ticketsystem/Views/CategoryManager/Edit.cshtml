@model Ticketsystem.ViewModels.EditCategoryViewModel
@{
    ViewData["Title"] = "Kategorie bearbeiten";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="OldName" />
    <div class="form-group">
        <label class="control-label">Alter Name</label>
        <input asp-for="OldName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="NewName" class="control-label">Neuer Name</label>
        <input asp-for="NewName" class="form-control" />
        <span asp-validation-for="NewName" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Speichern</button>
        <a asp-action="Index" class="btn btn-secondary">Abbrechen</a>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 