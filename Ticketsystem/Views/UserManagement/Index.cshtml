@model IEnumerable<Ticketsystem.ViewModels.UserListViewModel>
@{
    ViewData["Title"] = "User Management";
}

<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">User Management</h2>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <div class="mb-4 flex justify-between items-center">
            <a asp-action="Create" class="text-sm font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 px-4 py-2 rounded bg-blue-100 dark:bg-blue-900">Create New User</a>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">@Html.DisplayNameFor(model => model.UserName)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">@Html.DisplayNameFor(model => model.Email)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">@Html.DisplayNameFor(model => model.FullName)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Roles</th>
                        <th class="px-6 py-3"></th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td class="px-6 py-4 whitespace-nowrap">@Html.DisplayFor(modelItem => item.Email)</td>
                            <td class="px-6 py-4 whitespace-nowrap">@(string.IsNullOrWhiteSpace(item.FullName) ? item.UserName : item.FullName)</td>
                            <td class="px-6 py-4 whitespace-nowrap">@string.Join(", ", item.Roles)</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-xs font-medium text-yellow-700 hover:text-yellow-900 bg-yellow-100 dark:bg-yellow-900 dark:text-yellow-300 px-3 py-1 rounded">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 