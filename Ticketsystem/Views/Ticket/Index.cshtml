@model Ticketsystem.ViewModels.AdminTicketsByPriorityViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Tickets";
    var priorities = new[] { "Hoch", "Mittel", "Niedrig" };
}

<a asp-action="Create" class="btn btn-primary mb-3">+ Neues Ticket</a>

@foreach (var priority in priorities)
{
    <div class="mb-4">
        <div class="card h-100">
            <div class="card-header @(priority == "Hoch" ? "card-header-priority-hoch" : priority == "Mittel" ? "card-header-priority-mittel" : "card-header-priority-niedrig")">
                <h5 class="card-title mb-0">Priorität: @priority</h5>
            </div>
            <div class="card-body">
                @if (Model.GroupedTickets.ContainsKey(priority) && Model.GroupedTickets[priority].Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Titel</th>
                                <th>Status</th>
                                <th>Erstellt am</th>
                                <th>Erstellt von</th>
                                <th>Kategorie</th>
                                <th>Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var ticket in Model.GroupedTickets[priority])
                        {
                            <tr>
                                <td><a asp-action="Details" asp-route-id="@ticket.Id">@ticket.Title</a></td>
                                <td>@ticket.Status</td>
                                <td>@ticket.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>@(string.IsNullOrWhiteSpace(ticket.Creator?.FullName) ? ticket.Creator?.UserName : ticket.Creator?.FullName)</td>
                                <td>@ticket.Category?.Titel</td>
                                <td>
                                    @if (User.IsInRole("Admin") || ticket.CreatorId == UserManager.GetUserId(User))
                                    {
                                        <a asp-action="Edit" asp-route-id="@ticket.Id" title="Bearbeiten">✏️</a>
                                        <a asp-action="Delete" asp-route-id="@ticket.Id" title="Löschen">🗑</a>
                                    }
                                    else
                                    {
                                        <span>---</span>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Keine Tickets mit dieser Priorität.</p>
                }
            </div>
        </div>
    </div>
}
